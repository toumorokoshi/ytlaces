# SOURCE
# SUMMARY: navigate to the workspace directory
# START HELP
# navigate to the workspace directory, supports subdirectory navigation 
# END HELP
local root=$HOME/workspace
if [ ! -d $root ]; then
    mkdir -p $root
fi

local target_path path_element
target_path="$root"
if [ "$1" == "--complete" ]; then
  shift
  run_completion=true
fi

for path_element in $@
do
  target_path="$target_path/$path_element"
done

if [ -z "$run_completion" ]; then
  cd $target_path
else
  ls $target_path
fi
