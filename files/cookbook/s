# SOURCE
# START HELP
# navigate to the sandbox directory, supports subdirectory navigation 
# END HELP
if [ ! -d ~/sandbox ]; then
    mkdir -p ~/sandbox
fi

local target_path path_element
target_path="$HOME/sandbox"
for path_element in "$@"
do
  if [[ "$path_element" = "--complete" ]]; then
    ls $target_path
    exit
  fi
  target_path="$target_path/$path_element"
done

echo $target_path
cd $target_path