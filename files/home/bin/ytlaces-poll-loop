#!/usr/bin/env bash
#Some things are easier to do in a simple poll loop.
#in particular, things that have to run in the context
#of the current x session.
#
while true
do
    [[ -f ~/bin/mem-xrandr ]] && ~/bin/mem-xrandr
    # using the regular mouse bindings so I can
    # us the trackpad as needed.
    # ~/bin/detect-and-configure-mouse
    # disabling because all of my devices support
    # both ethernet / wifi simultaneously without issue.
    # ~/bin/remove-duplicate-internet
    sleep 2;
done